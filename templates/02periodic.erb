// Enable the update/upgrade script (0=disable)
APT::Periodic::Enable "1";

// Do "apt-get update" automatically every n-days (0=disable)
APT::Periodic::Update-Package-Lists "<%= scope.lookupvar('apt::update_periodic_update') %>";

// Do "apt-get upgrade --download-only" every n-days (0=disable)
APT::Periodic::Download-Upgradeable-Packages "<%= scope.lookupvar('apt::update_periodic_download') %>";

// Run the "unattended-upgrade" security upgrade script
// every n-days (0=disabled)
// Requires the package "unattended-upgrades" and will write
// a log in /var/log/unattended-upgrades
APT::Periodic::Unattended-Upgrade "<%= scope.lookupvar('apt::update_periodic_upgrade') %>";

// Do "apt-get autoclean" every n-days (0=disable)
APT::Periodic::AutocleanInterval "<%= scope.lookupvar('apt::update_periodic_clean') %>";

// Auto remove package
APT::Periodic::MaxAge "<%= scope.lookupvar('apt::update_periodic_max_age') %>";
APT::Archives::MinAge "<%= scope.lookupvar('apt::update_periodic_min_age') %>";
APT::Archives::MaxSize "<%= scope.lookupvar('apt::update_periodic_max_size') %>";
